    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/ciudadNombre" app:layout_constraintRight_toRightOf="parent" app:layout_constraintLeft_toLeftOf="parent" android:layout_marginRight="20dp" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@id/refreshButton" android:gravity="center" android:text="MADRID" android:textStyle="bold"/>

    <ImageView android:layout_height="100dp" android:layout_width="match_parent" android:id="@+id/imageMain" app:layout_constraintRight_toRightOf="parent" app:layout_constraintLeft_toLeftOf="parent" android:layout_marginRight="20dp" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/ciudadNombre" android:gravity="center" android:src="@mipmap/ic_greencovid"/>

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/incidenciaAcumuladaTexto" app:layout_constraintRight_toRightOf="parent" app:layout_constraintLeft_toLeftOf="parent" android:layout_marginRight="20dp" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/imageMain" android:gravity="center" android:text="Incidencia acumulada"/>

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/incidenciaAcumuladaNumero" app:layout_constraintRight_toRightOf="parent" app:layout_constraintLeft_toLeftOf="parent" android:layout_marginRight="20dp" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/incidenciaAcumuladaTexto" android:gravity="center" android:text="228" android:textStyle="bold"/>

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/casosPorHabitantes" app:layout_constraintRight_toRightOf="parent" app:layout_constraintLeft_toLeftOf="parent" android:layout_marginRight="20dp" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/incidenciaAcumuladaNumero" android:gravity="center" android:text="*Casos por cada 100000 habitantes"/>
